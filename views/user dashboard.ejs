        <div class="caseContainer">
          <!-- <div class="card">
            <div class="upper">
              <h4>Case NO : 1256</h4>
              <div class="caseInfo">
                <h4>caseTitle : 420</h4>
                <h4>caseDescription : Bank ke sath fraud</h4>
