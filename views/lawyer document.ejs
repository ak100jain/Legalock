  <!-- upload and delete button css -->
  <style>
    .fixed {
      position: fixed;
      left: 6%;
      bottom: 11%;
      padding: 20px;
      background-color: rgb(255, 255, 255);
      border: 1.5px solid rgb(54, 140, 232);
      display: flex;
      justify-content: center;
      gap: 20px;
      /* Add spacing between buttons */
