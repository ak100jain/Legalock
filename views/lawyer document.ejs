    <main>
      <div class="cases" style="justify-content: left; justify-content: space-evenly; gap: 50px; ">
        <!-- cards -->
      </div>
      <div class="CaseInfo">
        <div class="caseheading">Case Information</div>
        <div class="rule"></div>
        <div class="casedetail">
